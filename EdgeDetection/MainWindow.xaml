<Window x:Class="EdgeDetection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeDetection"
        xmlns:Title="clr-namespace:EdgeDetection.View.Title"
        xmlns:FileInputs="clr-namespace:EdgeDetection.View.FileInputs"
        xmlns:Options="clr-namespace:EdgeDetection.View.Options"
        xmlns:Actions="clr-namespace:EdgeDetection.View.Actions"
        xmlns:ImageOverview="clr-namespace:EdgeDetection.View.ImageOverview"
        mc:Ignorable="d"
        Title="Edge Detection" Height="512" Width="720">
    <Grid>
        <Grid Margin="16,4">
            <Grid.RowDefinitions>
                <!--Title-->
                <RowDefinition Height="55"/>
                <!--File inputs-->
                <RowDefinition Height="100"/>
                <!--Algorithm options-->
                <RowDefinition Height="*"/>
                <!--Commands-->
                <RowDefinition Height="50"/>
                <!--Footer-->
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"></ColumnDefinition>
                <ColumnDefinition Width="16"></ColumnDefinition>
                <ColumnDefinition Width="400"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Title:Title Grid.Row="0" Grid.Column="0"/>
            <FileInputs:FileInputs Grid.Row="1" Grid.Column="0"/>
            <Options:Options Grid.Row="2" Grid.Column="0"/>
            <Actions:Actions Grid.Row="3" Grid.Column="0"/>
            <ImageOverview:ImageOverview x:Name="imageOverviewControl" Grid.RowSpan="3" Grid.Column="2"/>
            <TextBlock Grid.Row="3" Grid.Column="2">Dawid Kacza - 2023<LineBreak/>Języki Asemblerowe</TextBlock>

        </Grid>
    </Grid>
</Window>
