<UserControl x:Class="EdgeDetection.View.FileInputs.FileInputs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EdgeDetection.View.FileInputs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <Label Content="Input File"/>

        <StackPanel Orientation="Horizontal">
            <Button Content="Select" Width="36" Height="24" Name="inputSelect" />
            <TextBlock Text="No file selected" Margin="16,0,0,0" VerticalAlignment="Center" Name="inputPath" />
        </StackPanel>

        <Label Content="Output Location" />

        <StackPanel Orientation="Horizontal">
            <Button Content="Select" Width="36" Height="24" Name="outputSelect"/>
            <TextBlock Text="No file selected" Margin="16,0,0,0" VerticalAlignment="Center" Name="outputPath"/>
        </StackPanel>

    </StackPanel>
</UserControl>
