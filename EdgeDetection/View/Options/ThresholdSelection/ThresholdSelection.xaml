<UserControl x:Class="EdgeDetection.View.Options.ThresholdSelection.ThresholdSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EdgeDetection.View.Options.ThresholdSelection"
             mc:Ignorable="d" >
    <StackPanel>
        <Label Content="Detection Threshold"/>
        <Slider Name="thresholdSlider"
            Minimum="0" Maximum="255"
            TickPlacement="BottomRight"
            TickFrequency="32"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Value:" />
            <TextBlock Text="{Binding Value, ElementName=thresholdSlider, StringFormat={}{0:0}}"
                VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
