<UserControl x:Class="EdgeDetection.View.Options.ImplementationSelection.ImplementationSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EdgeDetection.View.Options.ImplementationSelection"
             mc:Ignorable="d">
    <StackPanel>
        <Label Content="Implementation"/>
        <RadioButton IsChecked="true" Name="csharpImplementation" Checked="csharpImplementation_Checked">C#</RadioButton>
        <RadioButton Name="cpp_implementation" Checked="cpp_implementation_Checked">C++</RadioButton>
        <RadioButton Name="asm_implementation" Checked="asm_implementation_Checked">x86 Assembly</RadioButton>
    </StackPanel>
</UserControl>
