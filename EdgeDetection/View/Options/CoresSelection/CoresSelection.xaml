<UserControl x:Class="EdgeDetection.View.Options.CoresSelection.CoresSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EdgeDetection.View.Options.CoresSelection"
             mc:Ignorable="d">
    <StackPanel>
        <Label Content="Cores"/>
        <Slider Name="coresSlider"
            Minimum="1" Maximum="64"
            TickPlacement="BottomRight"
            TickFrequency="16"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Value:" />
            <TextBlock Text="{Binding Value, ElementName=coresSlider, StringFormat={}{0:0}}"
                VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>
